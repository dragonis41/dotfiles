#!/bin/bash

## Get all staged .xml file.
STAGED_JSON_FILES=$(git diff --cached --name-only --diff-filter=d -- '*.xml')

## Check if there is staged file.
if [[ $STAGED_JSON_FILES == "" ]]; then
    echo -e "Validating XML files.................................(no files to check)\x1B[44mSKIPPED\x1B[0m"
## otherwise we can do stuff with these changed Json files.
else
    if ! command -v xmllint &>/dev/null; then
        echo -e "Validating XML files.............................(xmllint not installed)\x1B[44mSKIPPED\x1B[0m"
    else
        for file in $STAGED_JSON_FILES; do
            ## Validate our file
            xmllint --noout "$file" 2>/dev/null
            if (($? != 0)); then
                echo -e "Validating XML files.....................................................\x1B[41mFAILED\x1B[0m"
                echo -e "\x1B[31mThe following file is not a valid XML file: \x1B[33m$file\x1B[0m\x1B[31m"
                xmllint "$file"
                echo -e "\x1B[0m"
                exit 1
            fi
        done
        echo -e "Validating XML files.....................................................\x1B[42mPASSED\x1B[0m"
    fi
fi
